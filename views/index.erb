<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Ruby Color Generator</title>
    <style>
      .box {
        width: 50px;
        height: 50px;
        margin: 5px;
        float: left;
        background-color: #a0a0a0;
      }
    </style>
  </head>
  <body>
    <form action="/" method="get">
      <p>
        <label for="saturation">Saturation (0.0 to 1.0)</label>
        <input type="text" name="saturation" value="<%= @saturation %>">
      </p>
      <p>
        <label for="lightness">Lightness (0.0 to 1.0)</label>
        <input type="text" name="lightness" value="<%= @lightness %>">
      </p>
      <p>
        <label for="seed">Seed (any integer)</label>
        <input type="text" name="seed" value="<%= @seed %>">
      </p>
      <p>
        <label for="num_colors">Number of Colors to Generate</label>
        <input type="text" name="num_colors" value="<%= @num_colors %>">
      </p>
      <p>
        <input type="submit" value="Submit">
      </p>
    </form>
    <% @rgb_colors.each do |rgb| %>
    <div class="box" style="background-color: #<%= rgb %>"></div>
    <% end %>
  </body>
</html>
